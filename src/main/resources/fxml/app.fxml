<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.javafxpractice.FreeHoldController">
    <!-- Sidebar -->
    <left>
        <VBox style="-fx-background-color: #3E3E3E; -fx-padding: 20px;">
            <Label text="FreeHold" style="-fx-text-fill: white; -fx-font-size: 20px;" />
            <Label text="Welcome, (USER)" style="-fx-text-fill: white;" />
            <Button text="Properties" style="-fx-background-color: #00AEEF; -fx-text-fill: white;" />
            <Button text="Logout" style="-fx-background-color: black; -fx-text-fill: white;" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox fx:id="mainContent" style="-fx-padding: 20px;">
            <ListView fx:id="propertyList" />
            <HBox style="-fx-padding: 10px;">
                <TextField fx:id="newPropertyName" promptText="New Property Name" />
                <Button text="Add Property" onAction="#handleAddProperty" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
